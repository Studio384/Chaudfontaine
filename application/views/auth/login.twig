{% extends "master.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-xs-10 col-md-offset-3 col-xs-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>Aanmelden</strong>
                </div>
                <div class="panel-body">
                    {% set error = error %}
                    <div class="alert alert-{{ error ? 'warning' : 'info' }} alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        {{ error ? error : "Meld je aan met je e-mailadres." }}
                    </div>

                    {{ form_open() }}
                    {% set error = form_error("email", "<p class='text-danger'>", '</p>') %}
                    <div class="form-group {{ error ? 'has-error' : '' }}">
                        <label for="email">E-mail</label>
                        <div class="input-group">
  									<span class="input-group-addon">
  										<i class="glyphicon glyphicon-user"></i>
  									</span>
                            <input type="email" name="email" value="{{ set_value('email') }}" id="email"
                                   class="form-control">
                        </div>
                        {{ error|raw }}
                    </div>
                    {% set error = form_error("password", "<p class='text-danger'>", '</p>') %}
                    <div class="form-group {{ error ? 'has-error' : '' }}">
                        <label for="password">Wachtwoord</label>
                        <div class="input-group">
  									<span class="input-group-addon">
  										<i class="glyphicon glyphicon-lock"></i>
  									</span>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        {{ error|raw }}
                    </div>
                    <input type="submit" value="Aanmelden" class="btn btn-primary">
                    {{ form_close() }}
                    <br>
                    <a href="{{ site_url('register') }}">
                        <button class="btn btn-danger">Registreer</button></a>

                    <a href="{{ site_url('password/new') }}">
                        <button class="btn btn-info">Wachtwoord vergeten?</button></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}