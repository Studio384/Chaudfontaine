{% extends "master.twig" %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-xs-10 col-md-offset-3 col-xs-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>Aanmelden</strong>
                </div>
                <div class="panel-body">
                    {% set error = error %}
                    <div class="alert alert-{{ error ? 'warning' : 'info' }} alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        {{ error ? error : "Meld je aan met je e-mailadres." }}
                    </div>

                    {{ form_open() }}
                    {% set error = form_error("md5", "<p class='text-danger'>", '</p>') %}
                    <div class="form-group {{ error ? 'has-error' : '' }}">
                        <label for="md5">Md5</label>
                        <input type="text" name="md5" id="md5" class="form-control">
                        {{ error|raw }}
                    </div>
                    <input type="submit" value="Check" class="btn btn-primary">
                    {{ form_close() }}
            </div>
        </div>
    </div>
{% endblock %}